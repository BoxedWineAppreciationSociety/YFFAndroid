<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_header"
        android:text="@string/artist_about_header"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="22dp"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"

        android:id="@+id/tv_artist_about"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/links_header"
        android:text="@string/links_header"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="22dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <com.example.android.yffandroid.SocialButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sb_facebook"
            android:layout_marginLeft="16dp"
            android:background="@drawable/social_button_shape"
            android:onClick="socialButtonClicked"
            android:visibility="gone" />

        <com.example.android.yffandroid.SocialButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/sb_instagram"
            android:background="@drawable/social_button_shape"
            android:onClick="socialButtonClicked"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>